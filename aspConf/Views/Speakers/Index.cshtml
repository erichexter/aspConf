@model IList<aspConf.Model.Speaker>
<h2>
    Check out these Awesome speakers!</h2>
<p>
    We have a great line up of top notch speakers varying from <a href="http://www.asp.net/"
        target="_blank">ASP.NET team</a> members, MVPs and Community Influencers for
    aspConf!</p>

@foreach (var speaker in Model) {
    var twitter = "http://twitter.com/@" + speaker.Twitter;
    <div>
        <div><img src="https://api.twitter.com/1/users/profile_image?screen_name=@speaker.Twitter&size=bigger" alt="aspConf Speaker @speaker.FullName" />
        <br />
        <a href="@twitter" target="_blank">@@@speaker.Twitter</a></div>
        <h3>@speaker.FullName</h3>
        <p>@speaker.Bio</p>
    </div>
}
